<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="tviewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/grid.css">
    <link rel="stylesheet" href="/css/cart/payment.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <title>Document</title>
</head>

<body>
    <div class="bodyy hidden">

        <div class="container">
            <h1 class="title">Thêm Địa Chỉ</h1>
            <span id="exit"><i class='bx bx-x'></i></span>
            <form action="/cart/setaddress" method="post">

                <div class="input-list">


                    <input type="text" name="t1" placeholder=" Địa Chỉ" id="t1">
                    <div></div>
                    <small></small>

                </div>
                <div class="input-list">


                    <input type="text" name="t2" placeholder="Phường/Xã" id="t2">
                    <div></div>
                    <small></small>

                </div>
                <div class="input-list">

                    <input type="text" name="t3" placeholder="Quận/Huyện" id="t3">
                    <div></div>
                    <small></small>
                </div>
                <div class="input-list">

                    <input type="text" name="t4" placeholder="Tỉnh/Thành Phố" id="t4">
                    <div></div>
                    <small></small>
                </div>

                <div class="btn">
                    <button id="change" type="submit"> Thêm</button>
                </div>





            </form>
        </div>
    </div>
    <div class="body">
        <%- include('../partials/header'); %>
            <div class="grid wide">
                <h1>Thanh Toán</h1>
                <div class="address">
                    <div class="address_lable">
                        <i class='bx bxs-location-plus'></i>
                        Địa Chỉ Nhận Hàng
                        <div class="address_details">
                            <% if (data.address) { %>
                                <div class="address_name">
                                    <%=data.Name %>
                                </div>
                                <div class="address_number">
                                    <%=data.NPhone %>
                                </div>
                                <div class="address_">
                                    <%=data.address %>

                                </div>
                                <%} else { %>
                                    <div class="address_none">

                                        <p>Bạn Chưa Nhập Địa Chỉ</p>
                                        <span id="btn_change">Thay Đổi</span>
                                    </div>
                                    <% } %>


                        </div>
                    </div>
                </div>
                <div class="product">
                    <div class="product_header">
                        <h2>Sản Phẩm</h2>
                        <div class="_product_price">
                            Đơn giá
                        </div>
                        <div class="_product_solouong">
                            Số lượng

                        </div>
                        <div class="_product_total">
                            Thành tiền

                        </div>

                    </div>

                    <% for (var i=0; i < product.length; i++ ) { %>
                        <div class="product_details">
                            <div class="product_img">

                                <img src="/<%=product[i].img %>" alt="">
                            </div>
                            <div class="product_title">
                                <p>
                                    <%= product[i].productname %>
                                </p>
                            </div>
                            <div class="product_price">
                                <p>
                                <p>
                                    <%= product[i].offprice %>
                                </p>
                                </p>
                            </div>
                            <div class="product_soluong">
                                <p>
                                    <%= num[i] %>
                                </p>
                            </div>
                            <div class="product_total">
                                <p>
                                    <%=total[i] %>
                                </p>
                            </div>
                        </div>
                        <% } %>




                </div>
                <div class="still_moving">
                    <div class="send">
                        <label for="">Lời Nhắn</label>
                        <input type="text" placeholder="Lưu ý cho Người Bán">
                    </div>
                    <div class="moving">
                        <label for="">Đơn vị vận chuyển: </label>
                        <div class="select-move">
                            <p>Nhanh</p>
                            <small>Nhập hàng vào 4 Th5 - 10 Th05</small>
                        </div>
                        <p class="move_change">Thay Đổi</p>
                        <p class="moving_total">31.500</p>
                    </div>
                </div>
                <div class="product-total">
                    <span>Tổng số tiền ( <%=product.length %> sản phẩm ): </span>
                    <span>
                        <%=totall %>
                    </span>
                </div>
                <div class="payment">
                    <div class="payment_header">
                        <h2>Phương thức thanh toán</h2>
                        <div class="payment_select">
                            <span>Thanh Toán Khi Nhận Hàng</span>
                            <span>THAY ĐỔI</span>
                        </div>
                    </div>
                    <div class="payment_body">
                        <div class="payment_list">
                            <div class="payment_item">
                                <p>Tổng tiền hàng: </p>
                                <p>
                                    <%=totall %>
                                </p>

                            </div>
                            <div class="payment_item">
                                <p>Phí vận chuyển
                                </p>
                                <p>31.500</p>

                            </div>
                            <div class="payment_item">
                                <p>Tổng thanh toán:
                                </p>
                                <p class="Total">
                                    <%=a %>
                                </p>

                            </div>

                        </div>
                    </div>
                    <div class="payment_btn">
                        <p>Nhấn "Đặt hàng" đồng nghĩa với việc bạn đồng ý tuân theo Điều khoản Shopee và Điều khoản
                            và
                            Điều
                            kiện của hợp đồng Bảo hiểm</p>
                        <button id="btn_payment" style="cursor: pointer;"> Đặt Hàng</button>
                    </div>
                </div>

            </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script>


    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="/js/user.js"></script>
    <script src="/js/cart.js"></script>
    <script>
        $.ajax({
            url: '/cart/getpayment',
            type: 'get',
            success: function (data) {
                console.log(data);

                $('#btn_payment').click(function () {
                    var idorder = Math.floor(Math.random() * 100000)
                    for (var i = 0; i < data.product.length; i++) {
                        $.ajax({
                            url: "/cart/comfimpayment",
                            type: "post",
                            dataType: "text",
                            data: {
                                productname: data.product[i].productname,
                                img: data.product[i].img,
                                iduser: data.data.id,
                                idproduct: data.product[i].id,
                                total: data.a,
                                address: data.data.address,
                                num: data.num[i],
                                idorder: idorder
                            },
                            success: (data) => {
                                console.log('a');


                                $(location).attr('href', '/sucess')

                            },
                            error: (error) => { }
                        })
                    }
                })

            }
        })
        $('#btn_change').click(function () {
            $('.bodyy').removeClass('hidden')
        })
        $('#exit>').click(function () {
            $('.bodyy').addClass('hidden')
        })



    </script>
</body>


</html>