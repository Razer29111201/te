                                <% for (var i=0; i < suscess.length; i++ ) { %>
                                    <div class="product">
                                        <div class="product_header">
                                            <div class="idproduct">
                                                <span>Mã Đơn Hàng:</span>
                                                <h2>
                                                    <%= deleteorder[i] %>
                                                </h2>

                                            </div>
                                            <div class="_product_price">
                                                Đơn giá
                                            </div>
                                            <div class="_product_solouong">
                                                Số lượng

                                            </div>
                                            <div class="_product_total">
                                                Thành tiền

                                            </div>

                                        </div>
                                        <% for (var j=0; j < del[i].length; j++ ) { %>
                                            <div class="product_details">
                                                <div class="product_img">

                                                    <img src="/<%= del[i][j].img %>" alt="">
