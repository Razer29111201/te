            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
            <script src="/js/user.js"></script>
            <script src="/js/cart.js"></script>
            <script>
                $.ajax({
                    url: '/cart/getpayment',
                    type: 'get',
                    success: function (data) {
                        console.log(data);
                        if (data) {
                            $('#btn_payment').click(function () {
                                var idorder = Math.floor(Math.random() * 100000)
                                for (var i = 0; i < data.product.length; i++) {

                                    console.log('a');
                                    $.ajax({
                                        url: "/cart/comfimpayment",
                                        type: "post",
                                        dataType: "text",
                                        data: {
                                            iduser: data.data.id,
                                            idproduct: data.product[i].id,
                                            total: data.a,
                                            address: data.data.address,
                                            num: data.num[i],
                                            idorder: idorder
                                        },
                                        success: (data) => {
                                            console.log(data);
                                            if (data) {
                                                alert('Bạn Đã Thêm Sản Phẩm Từ Trước Đố')
                                            }
                                        },
                                        error: (error) => { }
                                    })
                                }
                            })
                        }
                    }
                })
                $('#btn_change').click(function () {
                    $('.bodyy').removeClass('hidden')
                })
                $('#exit>').click(function () {
                    $('.bodyy').addClass('hidden')
                })



            </script>
